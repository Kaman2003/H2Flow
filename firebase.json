{"functions": {
    "source": "backend/function",
    "codebase": "function",
     "predeploy": []
},

    "hosting": {
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        }
      ]
    },
    "emulators": {
      "functions": {
        "port": 5001
      },
      "hosting": {
        "port": 5000
      },
      "ui": {
        "enabled": true
      }
    }
  }