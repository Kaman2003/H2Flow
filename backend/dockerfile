# Use official Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files first (for layer caching)
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy all backend files
COPY . .

# Replace newlines in private key (critical for Firebase)
RUN sed -i 's/\\n/\n/g' .env

# Expose port
EXPOSE 5000

# Start command with auto-restart
CMD ["node", "index.js"]